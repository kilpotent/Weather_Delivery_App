<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Weather_Delivery_App"
             x:Class="Weather_Delivery_App.MainPage">

    <StackLayout Padding="20">
        <Label x:Name="CityLabel" 
               Text="Fetching weather..." 
               FontSize="24" 
               HorizontalOptions="CenterAndExpand" />
        <Label x:Name="TemperatureLabel" 
               Text="" 
               FontSize="20" 
               HorizontalOptions="CenterAndExpand" />
        <Label x:Name="WeatherDescriptionLabel" 
               Text="" 
               FontSize="18" 
               HorizontalOptions="CenterAndExpand" />
        <Button Text="Get Weather" 
                Clicked="OnGetWeatherClicked" 
                HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
